@model PlumRunDomain.Customer

<fieldset>
    <legend>Delete Customer</legend>

    <div class="alert alert-error" >
        <strong>
            Hold The Phone!
        </strong>
        Deleting a Customer Can Not be Undone!
    </div>

    <div class="row-fluid">
            <h5>@Html.DisplayTextFor(model => model.AROrgName)</h5>
            <h5>@Html.DisplayTextFor(model => model.ARAddress1)</h5>
            <h5>@Html.DisplayTextFor(model => model.ARAddress2)</h5>
            <h5>@Html.DisplayTextFor(model => model.ARAddress3)</h5>
            <h5>@Html.DisplayTextFor(model => model.ARCity), @Html.DisplayTextFor(model => model.ARStateProvID) &nbsp;&nbsp;&nbsp; @Html.DisplayTextFor(model => model.ARPostalCode)</h5>
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <button class="btn btn-app btn-warning btn-mini radius-4" name="button" value="cancel">
            <i class="icon-undo bigger-160"></i>
            Cancel
        </button>

        <button class="btn btn-app btn-danger btn-mini radius-4" id="btnDelete" name="button" value="delete">
            <i class="icon-trash bigger-160"></i>
            Delete
        </button>
    </p>
}
