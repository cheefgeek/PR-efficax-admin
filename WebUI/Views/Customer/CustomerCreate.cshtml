@*<h2>@ViewBag.Title</h2>*@

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true)

	<div class="row-fluid">

		<form method="POST" action="Customer/Create">
			<fieldset>
				<legend>Customer</legend>


				@*AROrgName*@
				<div class="control-group">
					<label class="control-label span2">Church Name</label>
					<div class="controls span10">
						<input type="text" name="AROrgName" placeholder="Church Name" />
					</div>
					@Html.ValidationMessageFor(model => model.CustomerCreate.AROrgName)
				</div>

				@*ARAddress1*@
				<div class="control-group ">
					<label class="control-label span2">Address 1</label>
					<div class="controls span10">
						<input type="text" name="ARAddress1" placeholder="Address 1" />
					</div>
					@Html.ValidationMessageFor(model => model.CustomerCreate.ARAddress1)
				</div>

				@*ARAddress2*@
				<div class="control-group ">
					<label class="control-label span2">Address 2</label>
					<div class="controls span10">
						<input type="text" name="ARAddress2" placeholder="Address 2" />
					</div>
					@Html.ValidationMessageFor(model => model.CustomerCreate.ARAddress2)
				</div>

				@*ARAddress3*@
				<div class="control-group ">
					<label class="control-label span2">Address 3</label>
					<div class="controls span10">
						<input type="text" name="ARAddress3" placeholder="Address 3" />
					</div>
					@Html.ValidationMessageFor(model => model.CustomerCreate.ARAddress3)
				</div>

				@*ARCity*@
				<div class="control-group ">
					<label class="control-label span2">City</label>
					<div class="controls span10">
						<input type="text" name="ARCity" placeholder="City" />
					</div>
					@Html.ValidationMessageFor(model => model.CustomerCreate.ARCity)
				</div>

				@*ARStateProvID*@
				<div class="control-group ">
					<label class="control-label span2">State ID</label>
					<div class="controls span10">
						@Html.DropDownList("ARStateProvID")
					</div>
					@Html.ValidationMessageFor(model => model.CustomerCreate.ARStateProvID)
				</div>

				@*ARPostalCode*@
				<div class="control-group ">
					<label class="control-label span2">Postal Code</label>
					<div class="controls span10">
						<input type="text" name="ARPostalCode" placeholder="Postal Code" />
					</div>
					@Html.ValidationMessageFor(model => model.CustomerCreate.ARPostalCode)
				</div>

				@*CountryID*@
				<div class="control-group ">
					<label class="control-label span2">Country</label>
					<div class="controls span10">
						@Html.DropDownList("CountryID")
					</div>
					@Html.ValidationMessageFor(model => model.CustomerCreate.CountryID)
				</div>


                @*PriceID*@
                <div class="control-group ">
                    <label class="control-label span2">Price</label>
                    <div class="controls span10">
                        @Html.DropDownListFor(m => m.pricesDropDown.PriceList, Model.pricesDropDown.PriceList)
                    </div>
                    @Html.ValidationMessageFor(model => model.CustomerCreate.PriceID)
                </div>

				

			</fieldset>

			<div >
				<button class="btn btn-app btn-grey btn-mini radius-4" name="button" value="save">
					<i class="icon-save bigger-160"></i>
					Save
				</button>

				<button class="btn btn-app btn-success btn-mini radius-4" name="button" value="clear">
					<i class="icon-refresh bigger-160"></i>
					Clear
				</button>

				<button class="btn btn-app btn-warning btn-mini radius-4" name="button" value="cancel">
					<i class="icon-undo bigger-160"></i>
					Cancel
				</button>

                <button class="btn btn-app btn-danger btn-mini radius-4" name="button" value="delete">
                    <i class="icon-trash bigger-160"></i>
                    Delete
                </button>

			</div>


            @*SIMPLE TEXT LINK INSTEAD OF BUTTON - KAREN DOESN'T LIKE*@
            @*@Html.ActionLink("Clear",
            "CustomerCreate",
            "Customer",
            null,
            new { @class = "lead" }
            )*@








		</form>

	</div>	
	
}

